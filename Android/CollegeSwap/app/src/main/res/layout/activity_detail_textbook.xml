<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="edu.ua.collegeswap.view.DetailTextbook">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$80"
        android:id="@+id/textViewPrice"
        android:layout_alignTop="@+id/textViewLabelPrice"
        android:layout_alignRight="@+id/textViewSeller"
        android:layout_alignEnd="@+id/textViewSeller"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/textViewLabelTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="soccerMom203"
        android:id="@+id/textViewSeller"
        android:layout_alignTop="@+id/textViewLabelSeller"
        android:layout_alignRight="@+id/textViewTitle"
        android:layout_alignEnd="@+id/textViewTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Super awesome textbook"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Price"
        android:id="@+id/textViewLabelPrice"
        android:layout_below="@+id/textViewLabelTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seller"
        android:id="@+id/textViewLabelSeller"
        android:layout_below="@+id/textViewLabelPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Details"
        android:id="@+id/textViewLabelDetails"
        android:layout_below="@+id/textViewLabelCourse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This is my favorite textbook. I really like it, so please be careful with it."
        android:id="@+id/textViewDetails"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textViewLabelDetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course"
        android:id="@+id/textViewLabelCourse"
        android:layout_below="@+id/textViewLabelSeller"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MATH 125"
        android:id="@+id/textViewCourse"
        android:layout_alignTop="@+id/textViewLabelCourse"
        android:layout_alignRight="@+id/textViewSeller"
        android:layout_alignEnd="@+id/textViewSeller"/>

    <TextView
        style="@style/SmallHeaderCrimson"
        android:text="MAKE OFFER"
        android:id="@+id/labelMakeOffer"
        android:layout_below="@id/textViewDetails"/>


    <include
        layout="@layout/crimson_line"
        android:id="@+id/lineOffer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/labelMakeOffer"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextOffer"
        android:hint="enter your offer"
        android:layout_below="@+id/lineOffer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Offer"
        android:id="@+id/buttonMakeOffer"
        android:layout_below="@+id/editTextOffer"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
